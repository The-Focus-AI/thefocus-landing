#!/bin/bash

if [ -z "$1" ]; then
    echo "Usage: $0 <file> <prompt>"
    exit 1
fi

if [ -z "$2" ]; then
    echo "Usage: $0 <file> <prompt>"
    exit 1
fi


if [ ! -f "$1" ]; then
    echo "File $1 does not exist"
    exit 1
fi



# Get MODEL from environment, default to claude-3.7-sonnet
MODEL=${MODEL:-claude-3.7-sonnet}

cat "$1" | \
llm -m $MODEL \
	"$2"
	