---
import { getTagDisplay, getTagSlug } from "../utils/ids";
import { getRecipeUrl } from "../utils/recipes";
import RecipeImage from "./recipe_image.astro";
import { formatDate } from "../utils/date";
const { recipe, full } = Astro.props;

const formattedPublishDate = formatDate(recipe.data.date);
---

<div class="mb-8">
  <h4
    class="text-lg font-bold mb-1 group-hover:text-orange-500 transition-colors"
  >
    {recipe.data.title}
  </h4>
  <ul class="flex flex-row flex-wrap gap-2 pb-4">
    {
      recipe.data.tech.map((tech) => (
        <li>
          <a
            class="pr-2 hover:underline font-mono uppercase text-xs"
            href={`/recipes/${tech}`}
          >
            {tech}
          </a>
        </li>
      ))
    }
  </ul>

<div>{recipe.data.image && <RecipeImage recipe={recipe} />}</a></div>


<p class="text-sm text-gray-700 mb-3">
  {recipe.data.description}
</p>

<a
href={getRecipeUrl(recipe)}
class="uppercase text-xs font-bold tracking-wider hover:text-orange-500 transition-colors"
>
VIEW RECIPE
</a>



  </div>
