---
const { h2_prompt, p_prompt, pdfLink } = Astro.props;
---
<section class="container mx-auto py-4 px-2">
    <h2 class="text-2xl font-bold text-center border-t-2 pt-16 mt-16 pb-8" style="color: #161616; border-top-color: #e6e4dc;">{h2_prompt || 'Subscribe to our newsletter'}</h2>

    {p_prompt && <p class="text-center text-lg mb-4" style="color: #4a4a4a;">{p_prompt}</p>}

    <div class="max-w-md w-full mx-auto rounded-md shadow-sm p-6" style="background-color: #faf9f6; border: 1px solid #e6e4dc;">
      <form
        action="https://buttondown.com/api/emails/embed-subscribe/schenk"
        method="post"
        class="embeddable-buttondown-form space-y-4"
      >
        <div class="space-y-2">
          <label for="bd-email" class="block text-sm font-medium" style="color: #4a4a4a;">
            Enter your email
          </label>
          <input
            type="email"
            name="email"
            id="bd-email"
            required
            class="w-full px-3 py-2 rounded-md shadow-sm focus:outline-none focus:ring-2"
            style="border: 1px solid #e6e4dc; background-color: #fff;"
          />
        </div>

        {pdfLink && <input type="hidden" name="redirect_url" value={new URL(pdfLink, Astro.site).href} />}

        <button
          type="submit"
          class="w-full text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors"
          style="background-color: #0e3b46;"
        >
          Subscribe
        </button>

        <p class="text-xs text-center" style="color: #4a4a4a;">
          <a
            href="https://buttondown.com/refer/schenk"
            target="_blank"
            rel="noopener noreferrer"
            style="color: #0e3b46;"
          >
            Powered by Buttondown.
          </a>
        </p>
      </form>
    </div>

</section>


  