---
import FluxImage from './fluximage.astro';
const { records } = Astro.props;
const id = records[0].filename;
---

<div class="w-full flex flex-wrap" id={id}>
    {records.map((record) => (
        <div class="lg:w-1/3 md:w-1/2 p-4 flex flex-col items-center justify-center">
            <FluxImage record={record} />
            <p>{record.step_count} steps</p>
            <p>{record.duration_seconds} seconds</p>
            <p>{record.model}</p>
            <p>{record.quality}</p>
            <p>{record.seed}</p>
        </div>
    ))}
</div>
