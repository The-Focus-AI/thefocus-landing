---
import { formatDate } from "../utils/date";
import { getPostLink } from "../utils/ids";
import { getRecipeUrl } from "../utils/recipes";
const { learning } = Astro.props;

const date = learning.data.date;
const title = learning.data.title;
const description = learning.data.description;
const formattedPublishDate = formatDate(learning.data.date);
const url = learning.collection === "posts" ? getPostLink(learning) : getRecipeUrl(learning);
---

<div class="group">
  <p class="text-xs uppercase tracking-wider mb-1">{formattedPublishDate}</p>
  <h3
    class="text-xl font-bold mb-2 text-ink group-hover:text-orange-500 transition-colors"
  >
    <a href={url}>{title}</a>
  </h3>
  <p class="text-lg text-gray-700 mb-3">
    <a href={url}>{description}</a>
  </p>
  <a
    href={url}
    class="uppercase text-xs font-bold tracking-wider hover:text-orange-500 transition-colors"
  >
    READ MORE
  </a>
</div>
